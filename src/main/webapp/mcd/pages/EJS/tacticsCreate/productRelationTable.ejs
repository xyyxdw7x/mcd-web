
<table class="content-table">
	<tr>
		<th class="content-table-th" style="width:50px;">序号</th>
		<th class="content-table-th" style="width:180px;">营销案名称</th>
		<th class="content-table-th">档次</th>
		<th class="content-table-th">详情</th>
		<th class="content-table-th">有效期</th>
		<th class="content-table-th" style="width:150px;">操作</th>
	</tr>
	<%for(var i = 0;i<data.result.length;i++){%>
		<tr class="even content-table-tr <%if(i%2==1){%>odd<%}else{%>even<%}%>" >
			<td class="content-table-td"><%=i+1%></td>
			<td class="content-table-td" planId="<%=data.result[i].planId%>"><div style="width:160px;" class="overflowEllipsis" title="<%=data.result[i].campName%>"><%=data.result[i].campName%></div></td>
			<td class="content-table-td align_center"  style=" line-height:20px;"><div style="width:160px;text-align:left;" class="overflowEllipsis" title="<%=data.result[i].planName%>"><%=data.result[i].planName%></div><div style="text-align:left;"><%=data.result[i].planId%></div></td>
			<% if(data.result[i].planDesc!=null){ %>
			<td class="content-table-td"><div class="overflowEllipsis" style="width:100px;text-align:left;" title="<%=data.result[i].planDesc.replace(/\"/g,"\'")%>"><%=data.result[i].planDesc%></div></td>
			<% }else{%>
			<td class="content-table-td"><div class="overflowEllipsis" style="width:100px;" title="无">无</div></td>
			<% } %>
			<td class="content-table-td"><%=new Date(data.result[i].planStartdate).getFullYear()%>-<%=new Date(data.result[i].planStartdate).getMonth()<9?'0'+(new Date(data.result[i].planStartdate).getMonth()+1):(new Date(data.result[i].planStartdate).getMonth()+1)%>-<%=new Date(data.result[i].planStartdate).getDate()<9?'0'+(new Date(data.result[i].planStartdate).getDate()):(new Date(data.result[i].planStartdate).getDate())%>到<%=new Date(data.result[i].planEnddate).getFullYear()%>-<%=new Date(data.result[i].planEnddate).getMonth()<9?'0'+(new Date(data.result[i].planEnddate).getMonth()+1):(new Date(data.result[i].planEnddate).getMonth()+1)%>-<%=new Date(data.result[i].planEnddate).getDate()<9?'0'+(new Date(data.result[i].planEnddate).getDate()):(new Date(data.result[i].planEnddate).getDate())%></td>
			<td class="content-table-td">
				<button type="button" class="table-button productRelationAddButton">添加</button>
				<button type="button" class="table-button productRelationExceptButton">剔除</button>
			</td>
		</tr>
	<%}%>
</table>

<div class="content-table-page">
	<div class="fright clearfix centent-page-box">
		<%if(!data.hasPrevPage || data.totalSize == 0){%>
			<a href="javascript:;" class="page-button fleft disabled">上一页</a>
		<%}else{%>
			<a href="javascript:;" class="page-button fleft" data-flag="prev">上一页</a>
		<%}%>
		<%if(data.totalPage>5){%>
			<%if(data.pageNum<5 || data.pageNum>data.totalPage-2){%>
				<a href="javascript:;" class="page-num fleft <%if(data.pageNum==1){%>active<%}%>">1</a>
				<a href="javascript:;" class="page-num fleft <%if(data.pageNum==2){%>active<%}%>">2</a>
				<a href="javascript:;" class="page-num fleft <%if(data.pageNum==3){%>active<%}%>">3</a>
				<a href="javascript:;" class="page-num fleft <%if(data.pageNum==4){%>active<%}%>">4</a>
				<a href="javascript:;" class="page-num fleft" data-flag="last-dot" style="pointer-events:none;">···</a>
				<a href="javascript:;" class="page-num fleft <%if(data.pageNum==data.totalPage-1){%>active<%}%>" ><%=data.totalPage-1%></a>
				<a href="javascript:;" class="page-num fleft <%if(data.pageNum==data.totalPage){%>active<%}%>"><%=data.totalPage%></a>
			<%}else if(data.pageNum>4 && data.pageNum<data.totalPage-1){%>
				<a href="javascript:;" class="page-num fleft ">1</a>
				<a href="javascript:;" class="page-num fleft">2</a>
				<%if(data.totalPage-2 == data.pageNum){%>
					<a href="javascript:;" class="page-num fleft">3</a>
				<%}%>
				<a href="javascript:;" class="page-num fleft" data-flag="first-dot" style="pointer-events:none;">···</a>
				<a href="javascript:;" class="page-num fleft active"><%=data.pageNum%></a>
				<%if(data.totalPage-2 != data.pageNum){%>
					<a href="javascript:;" class="page-num fleft" data-flag="last-dot" style="pointer-events:none;">···</a>
				<%}%>
				<a href="javascript:;" class="page-num fleft"><%=data.totalPage-1%></a>
				<a href="javascript:;" class="page-num fleft"><%=data.totalPage%></a>
			<%}%>
		<%}else{%>
			<%for(var i =1; i<=data.totalPage;i++){%>
				<a href="javascript:;" class="page-num fleft <%if(data.pageNum==i){%>active<%}%>"><%=i%></a>
			<%}%>
		<%}%>
		<%if(!data.hasNextPage || data.totalSize == 0){%>
			<a href="javascript:;" class="page-button fleft disabled">下一页</a>
		<%}else{%>
			<a href="javascript:;" class="page-button fleft" data-flag="next">下一页</a>
		<%}%>
		<span class="fleft">
			<input type="text"class="ui-page-num"/>
		</span>
		<a href="javascript:;" class="ui-page-button J_go_num fleft">跳转</a>
	</div>
</div>